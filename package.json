{
    "name": "backend-limehome",
    "version": "0.0.1",
    "description": "The wall API",
    "main": "app.js",
    "scripts": {
        "test": "jest --forceExit --coverage --verbose",
        "start": "node dist/app.js",
        "build": "npm run clean && tsc --build tsconfig.json && npm run copyTemplates",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "nodemon dist/app.js",
        "watch-ts": "tsc -w",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run start-debug\"",
        "watch-test": "npm run test -- --watchAll",
        "clean": "rm -rf dist/*",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "tslint:fix": "tslint --fix  -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "start-debug": "nodemon",
        "dev": "tsc-watch --onSuccess \"node dist/app.js\" --onFailure \"echo Compilation Failed\" --compiler typescript/bin/tsc --noClear",
        "copyTemplates": "copyfiles -u 1 -a \"./src/templates/**\" \"./dist/\""
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "keywords": [
        "Limehome"
    ],
    "author": "Juan Requena",
    "license": "UNLICENSED",
    "bugs": {
        "url": ""
    },
    "engines": {
        "node": ">= 8.0.0"
    },
    "homepage": "s",
    "dependencies": {
        "@types/striptags": "^3.1.1",
        "body-parser": "1.19.0",
        "bufferutil": "^4.0.3",
        "busboy": "0.3.1",
        "concurrently": "^5.3.0",
        "copyfiles": "^2.4.1",
        "cors": "2.8.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "joi": "17.3.0",
        "joi-oid": "^1.1.2",
        "lodash": "^4.17.21",
        "mongoose": "5.11.14",
        "request": "2.88.2",
        "striptags": "^3.1.1",
        "url-metadata": "^2.5.0",
        "utf-8-validate": "^5.0.4",
        "uuid": "8.3.2",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/busboy": "0.2.3",
        "@types/cron": "^1.7.2",
        "@types/express": "4.17.11",
        "@types/jest": "24.9.1",
        "@types/jimp": "^0.2.28",
        "@types/node": "14.14.22",
        "@types/request": "^2.48.5",
        "@types/uuid": "8.3.0",
        "jest": "26.6.3",
        "nodemon": "2.0.7",
        "supertest": "^6.1.3",
        "ts-jest": "26.5.0",
        "ts-node": "9.1.1",
        "tsc-watch": "4.2.9",
        "tslint": "6.1.3",
        "typescript": "4.1.3"
    }
}
